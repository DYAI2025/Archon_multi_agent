# Orchestrator Service Dockerfile
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install additional dependencies for orchestrator
RUN pip install --no-cache-dir \
    redis \
    httpx \
    asyncio \
    prometheus-client

# Copy source code
COPY src/ /app/src/

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Expose port
ARG ARCHON_ORCHESTRATOR_PORT=8053
EXPOSE ${ARCHON_ORCHESTRATOR_PORT}

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
    CMD curl -f http://localhost:${ARCHON_ORCHESTRATOR_PORT}/health || exit 1

# Run the orchestrator service
CMD ["python", "-m", "uvicorn", "src.orchestrator.api:app", "--host", "0.0.0.0", "--port", "8053"]