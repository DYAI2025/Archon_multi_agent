# Enhanced MCP Server with fastapi_mcp and additional integrations
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install MCP enhancement packages
RUN pip install --no-cache-dir \
    httpx \
    websockets \
    pydantic-settings \
    aiofiles

# Copy source code
COPY src/ /app/src/

# Set environment variables
ENV PYTHONPATH=/app:/app/integrations
ENV PYTHONUNBUFFERED=1

# Expose port
EXPOSE 8051

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
    CMD curl -f http://localhost:8051/health || exit 1

# Run enhanced MCP server
CMD ["python", "-m", "uvicorn", "src.mcp.enhanced_server:app", "--host", "0.0.0.0", "--port", "8051"]