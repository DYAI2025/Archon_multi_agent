{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "archon-mcp",
      "source": {
        "repo": "python"
      },
      "startCommand": "python -m uvicorn src.mcp.enhanced_server:app --host 0.0.0.0 --port $PORT",
      "envVars": {
        "PYTHONPATH": "/app:/app/integrations"
      }
    }
  ]
}